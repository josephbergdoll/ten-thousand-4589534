/* Ten Thousand */

@import "reset.css";

/* Variables */

$white: white;
$hoverwhite: rgba(255,255,255,0.75);
$hoverblack: rgba(0,0,0,0.75);
$lightgray: rgba(250,251,253,1);
$altgray: rgba(240,241,245,1);
$strokegray: rgba(229,229,229,1);
$typegray: rgba(172,173,176,1);
$darkertype: rgba(110,113,116,1);
$linkgray: rgba(163,163,166,1);
$purple: rgba(120,68,133,1);
$cartoverlaybg: rgba(0,0,0,0.9);
$almostblack: rgba(75,75,75,1);
$dark: rgba(25,25,27,1);
$black: black;

$serif: "ff-meta-serif-web-pro", "Times New Roman", Times, serif;

@mixin aa-text {
  -webkit-font-smoothing: antialiased;
}

/* Base Styles */

body, html {
  width: 100%;
  margin: 0;
  padding: 0;
}

html {
  height: 100%;
  }

body {
  font-size: 100%;
  -webkit-font-smoothing: subpixel-antialiased;
  width: 100%;
  height: auto;
  font-family: "ars-maquette-web", "Helvetica Neue", Arial, Helvetica, sans-serif;
  -webkit-tap-highlight-color: $black;
  background: white;
  &.template-index {
  height: 100%;
  }
}

::selection {
  background: $black;
  color: white;
}

::-moz-selection {
  background: $black;
  color: white;
}

* {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

ul {
  list-style-type: none;
}

img {
  max-width: 100%;
  height: auto;
}


a,h1,h2,h3,h4,h5,span {
  transition: color 0.35s ease-in, opacity 0.35s ease-in, background-color 0.35s ease-in;
  -webkit-transition: color 0.35s ease-in, opacity 0.35s ease-in, background-color 0.35s ease-in;
  -moz-transition: color 0.35s ease-in, opacity 0.35s ease-in, background-color 0.35s ease-in;
  -o-transition: color 0.35s ease-in, opacity 0.35s ease-in, background-color 0.35s ease-in;
  &:hover {
      transition: color 0.15s ease-in, opacity 0.15s ease-in, background-color 0.15s ease-in;
    -webkit-transition: color 0.15s ease-in, opacity 0.15s ease-in, background-color 0.15s ease-in;
    -moz-transition: color 0.15s ease-in, opacity 0.15s ease-in, background-color 0.15s ease-in;
    -o-transition: color 0.15s ease-in, opacity 0.15s ease-in, background-color 0.15s ease-in;
    }
}

a.current {
  color: $black;
}

div.clear {
  clear:left;
  height: 0;
}

div.clearright {
  clear: both;
  height: 0;
}

em {
  font-style: italic;
}

a {
  text-decoration: none;
  color: $black;
}

.purple {
  color: $darkertype !important;
}

.white {
  color: white;
}

.clearfix {
  display: block;
}

.clearfix:after {
  content: ".";
  display: block;
  clear: both;
  visibility: hidden;
  line-height: 0;
  height: 0;
}



